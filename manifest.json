{
    "manifest_version": 3,
    "name": "ScanBookmarks",
    "description": "Gestionnaire de favoris pour Scans et Anim√©s",
    "version": "0.1",
    "permissions": [
        "bookmarks",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}